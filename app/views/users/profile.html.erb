<h1><%= @user_2_show.username %></h1>

<dl>
  <dt>Private</dt>
  <dd>false</dd>

  <dt>Followers</dt>
  <dd>
    <%= @follower_count  %>


      <div>
          

          

          <% if @hasBeenAccepted  %>
              <a href="/delete_follow_request_from_profile/<%= @user_2_show.id %>">
                Unfollow
              </a>
             
          <% elsif @hasBeenRejected  %>
            
          <% else   %>
              <form action="/insert_follow_request" method="post">
                <input type="hidden" name="query_recipient_id" value="<%= @user_2_show.id %>">
                <input type="hidden" name="stay_on_profile" value="1">

                <button>
                  Follow
                </button>
              </form>
          <% end %>
    </div>

  </dd>

  <dt>Following</dt>
  <dd><%= @following_count  %></dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/trina">Profile</a>
    </li>
    <li>
      <a href="/users/trina/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/trina/feed">Feed</a>
    </li>
    <li>
      <a href="/users/trina/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Own photos (<%= @matching_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

<% @matching_photos.each do |a_photo| %> 
  <tr>
    <td>
      <img src= <%= a_photo.image %> class="img-responsive">
    </td>

    <td>
      <%=  @user_2_show.username %> 
    </td>

    <td>
      <%=  a_photo.caption %>
    </td>

    <td>
      <%= time_ago_in_words(a_photo.created_at) %> ago
    </td>

    <td>
      <%= a_photo.likes_count  %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %> 
  
</table>
